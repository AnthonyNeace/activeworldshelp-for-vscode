{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ActiveWorlds Help",
	"patterns": [
		{
			"include": "#expression"
		}	
	],
	"repository": {
		"expression": {
			"patterns": [{ "include": "#keywords" }, { "include": "#topics" }]
		  },		
		"keywords": {
			"patterns": [{
				"name": "keyword.control.awh",
				"match": "\\b(help_base|topic|endtopic)\\b"
			}]
		},
		"topics": {
			"begin": "topic",
			"end": "endtopic",
			"beginCaptures": {
			  "0": { "name": "punctuation.topic.open" }
			},
			"endCaptures": {
			  "0": { "name": "punctuation.topic.close" }
			},
			"name": "expression.group",
			"patterns": [{ "include": "#expression" }]			
		  }		
	},
	"scopeName": "source.activeworlds.help"
}
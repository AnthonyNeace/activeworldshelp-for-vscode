{
  // symbols used as brackets
  "brackets": [
    ["topic", "endtopic"]
  ],
  // symbols that are auto closed when typing
  "autoClosingPairs": [
    ["topic ", "\"\"\nendtopic"],  
    ["\"", "\""],
  ],
  // symbols that can be used to surround a selection
  "surroundingPairs": [
    ["\"", "\""],
  ],
	"folding": {
		"markers": {
		  "start": "\\s*(?<!end)topic\\s*",
		  "end": "\\s*endtopic\\s*"
		}
  },
  "indentationRules": {
    "increaseIndentPattern": "\\s*(?<!end)topic\\s*(\".*\")*",
    "decreaseIndentPattern": "^[^ ]$"
  }
}